<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 扫描bean -->
    <context:component-scan base-package="person.jzh.spring.demo2"/>

    <!-- 实现了用户自定义初始化和销毁方法 -->
    <bean id="book" class="person.jzh.spring.demo2.pojo.Book" init-method="myPostConstruct" destroy-method="myPreDestory">
        <!-- 注入bean 属性名称 -->
        <property name="bookName" value="thingking in java" />
    </bean>

    <!--引入自定义的BeanPostProcessor-->
    <bean class="person.jzh.spring.demo2.processor.MyBeanPostProcessor"/>

</beans>